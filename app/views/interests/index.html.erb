<h1 class="text-center m-5">Expressions of Interest</h1>
<h2 class="text-center">Upcoming</h1>
<% if @new_interests.present? %>
  <%= render 'card_interest', to_display: @new_interests %>
<% else %>
  <p>You have not signed up for any tasks yet. Let's add some!</p>
  <%= link_to 'View all opportunities', tasks_path, class: "btn btn-secondary btn-sm m-2" %>
<% end %>

<% if @old_interests.present? %>
  <h2 class="text-center">Previous</h1>
  <%= render 'interest_table', interests_to_list: @old_interests %>
<% end %>