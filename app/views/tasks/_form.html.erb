<%= simple_form_for @task do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.association :charity %>
    <%= f.simple_fields_for :address do |a| %>
      <%= a.input :street_add, label: 'Street address', placeholder: '1/100 Main street' %>
      <%= a.input :suburb %>
      <%= a.input :state %>
      <%= a.input :country %>
    <% end %>
    <%= f.input :summary, as: :text %>
    <%= f.input :description, as: :text %>
    <%= f.input :hours %>
    <%= f.input :date, order: [:day, :month, :year] %>
    <%= f.file_field :image, accept: "image/png, image/jpg, image/jpeg"%>
    <%= f.collection_check_boxes :skill_ids, Skill.all, :id, :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
